article.obj: ${INC} ${SRC_DIR}\article.c ${OPTCFG}
	${CC} ${CC_FLAG} ${SRC_DIR}\article.c

mark.obj: ${INC} ${SRC_DIR}\mark.c ${OPTCFG}
	${CC} ${CC_FLAG} ${SRC_DIR}\mark.c

mh.obj: ${INC} ${SRC_DIR}\mh.c ${OPTCFG}
	${CC} ${CC_FLAG} ${SRC_DIR}\mh.c

ucbmail.obj: ${INC} ${SRC_DIR}\ucbmail.c ${OPTCFG}
	${CC} ${CC_FLAG} ${SRC_DIR}\ucbmail.c

