all: ${EXE}

obj: ${OBJ}

${OPTCFG}: Makefile
	echo ${INC_OPT1}	>  ${OPTCFG}
	echo ${INC_OPT2}	>> ${OPTCFG}
	echo ${INC_OPT3}	>> ${OPTCFG}
	echo ${BASE_OPT}	>> ${OPTCFG}
	echo ${CONS_OPT}	>> ${OPTCFG}
	echo ${CONF_OPT}	>> ${OPTCFG}

${EXE}: ${BASE_OBJ} ${OPT_OBJ} ${C_OBJ}
	echo ${BASE_OBJ1}	>  ${OBJCFG}
	echo ${BASE_OBJ2}	>> ${OBJCFG}
	echo ${BASE_OBJ3}	>> ${OBJCFG}
	echo ${OPT_OBJ1}	>> ${OBJCFG}
	echo ${OPT_OBJ2}	>> ${OBJCFG}
	echo ${OPT_OBJ3}	>> ${OBJCFG}
	echo ${C_OBJ}		>> ${OBJCFG}
	${CC} -e${EXE} ${LD_FLAG} @${OBJCFG} ${LIBS}
	#${STRIP} $@

${C_OBJ}: ${C_SRC} ${C_INC} ${SITE} ${OPTCFG}
	${CC} ${CC_FLAG} ${NET_OPT} ${C_SRC}

compat.obj: ${COMPAT_INC} ${COMPAT_DIR}\compat.c ${OPTCFG}
	${CC} ${CC_FLAG} ${COMPAT_DIR}\compat.c

tcplib.obj: ${COMPAT_INC} ${TCP_INC} ${TCP_DIR}\tcplib.c ${OPTCFG}
	${CC} ${CC_FLAG} ${NET_OPT} ${TCP_DIR}\tcplib.c

